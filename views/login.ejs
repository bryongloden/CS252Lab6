<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script> 
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">

    <!-- Stuff we actually wrote -->
    <title>Where'd It Go?! | Login</title>
    <link rel="stylesheet" href="login.css">
  </head>

  <body id="body-login">
    <div class="container center-block">
      <!-- Login form -->
      <form id="login-form" method="POST">
        <h1>Login</h1>

        <!-- Email -->
        <div id="div-input-fields">
          <div class="div-login div-email">
            <label for="email" class="login-input-title">Email: </label>
            <input type="text" name="email" placeholder="Enter email" required>
          </div>

          <!-- Password -->
          <div class="div-login div-password">
            <label for="password" class="login-input-title">Password: </label>
            <input type="password" name="password" placeholder="Enter password" required>
          </div>
        </div>

        <!-- Login button -->
        <div id="div-button">
          <button type="submit" id="submit">Login!</button>
        </div>
      </form>
    </div>
  </body>
</html>
