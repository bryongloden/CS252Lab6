<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include partials/head %>

    <!-- Stuff we actually wrote -->
    <title>Where'd It Go?! | Login</title>
    <link rel="stylesheet" href="css/login.css">
  </head>

  <body id="body-login">
    <div class="container center-block">
      <!-- Login form -->
      <form id="login-form" method="POST">
        <h1>Login</h1>

        <!-- Email -->
        <div id="div-input-fields">
          <div class="div-login div-email">
            <label for="email" class="login-input-title">Email: </label>
            <input type="text" name="email" placeholder="Enter email" required>
          </div>

          <!-- Password -->
          <div class="div-login div-password">
            <label for="password" class="login-input-title">Password: </label>
            <input type="password" name="password" placeholder="Enter password" required>
          </div>
        </div>

        <!-- Login button -->
        <div id="div-button">
          <button type="submit" id="submit">Go!</button>
        </div>

        <!-- Login link -->
        <a href="signup">Don't have an account yet?</a>

        <!-- Error message -->
        <p class="errorMsg"><%= errorMsg %></p>
      </form>
    </div>
  </body>
</html>
